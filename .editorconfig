# EditorConfig is awesome: https://EditorConfig.org

# Top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
max_line_length = 120

# YAML files (Ansible playbooks, vars, tasks, etc.)
[*.{yml,yaml}]
indent_style = space
indent_size = 2
max_line_length = 120

# Jinja2 templates
[*.{j2,jinja,jinja2}]
indent_style = space
indent_size = 2
max_line_length = 120

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 4

[*.md]
trim_trailing_whitespace = false
indent_size = 2

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# Docker files
[{Dockerfile*,*.dockerfile}]
indent_style = space
indent_size = 4

# Makefile
[{Makefile,*.mk}]
indent_style = tab
tab_width = 4
