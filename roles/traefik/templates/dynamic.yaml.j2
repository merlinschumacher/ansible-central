# yaml-language-server: $schema=https://json.schemastore.org/traefik-v3.json
---
http:
  middlewares:
    https-redirect:
      redirectScheme:
        scheme: https
    {{ docker_traefik_lan_middleware | split('@') | first }}:
      ipAllowList:
        sourceRange:
          - "172.18.0.0/16"
          - "172.30.0.0/16"
          - "127.0.0.1/32"
          - "10.138.1.0/24"
          - "10.138.4.0/24"
          - "10.138.5.0/24"
          - "fe80:0:8678:48ff::/64"
          - "fd00:464e:6dff:fe53::/64"
          - "fd3c:3065:745::/64"
          - "fd3c:3065:744::/64"
    crowdsec-bouncer:
        plugin:
            crowdsec-bouncer-traefik-plugin:
                enabled: true
                crowdsecAppsecEnabled: true
                crowdsecLapiKey: {{ traefik_crowdsec_bouncer_token }}
