# yaml-language-server: $schema=https://json.schemastore.org/traefik-v3.json
# jinja2: lstrip_blocks=True, trim_blocks=True
---
api:
  dashboard: false
  insecure: false

ping: {}

accessLog:
  filePath: "/var/log/traefik/access.log"
  format: json
  filters:
    statusCodes:
      - "200-299" # log successful http requests
      - "400-599" # log failed http requests
  # collect logs as in-memory buffer before writing into log file
  bufferingSize: 100
  fields:
    headers:
      defaultMode: drop # drop all headers per default
      names:
          User-Agent: keep # log user agent strings

#metrics:
#  influxDB2:
#    address: http://localhost:8086
#    org: merlinschumacher.de
#    bucket: traefik
#    token: {{ traefik_influxdb_token }}

log:
  level: INFO

entryPoints:
  web:
    address: ":80"
    http:
      redirections:
        entryPoint:
          to: {{ traefik_https_endpoint }}
          scheme: https
  {{ traefik_https_endpoint }}:
    asDefault: true
    http3: {}
    address: ":443"
    http:
      middlewares:
        - crowdsec-bouncer@file
        - http-compress@file
      tls:
        certResolver: 'default'
        domains:
          - main: "*.{{ ansible_domain }}"
            sans:
              - "{{ ansible_domain }}"
              - "*.merlinschumacher.de"
{% for entrypoint in traefik_entrypoints %}
  {{ entrypoint }}:
    address: ":{{ traefik_entrypoints[entrypoint] }}"
{% endfor %}

providers:
  docker:
    watch: true
    exposedByDefault: false
    network: "{{ docker_proxy_network }}"
  file:
    watch: true
    filename: /etc/traefik/dynamic.yaml

certificatesResolvers:
   default:
     acme:
       email: {{ traefik_cf_email }}
       storage: /etc/traefik/acme/acme.json
       dnsChallenge:
         provider: cloudflare
         resolvers:
           - "1.1.1.1:53"
           - "8.8.8.8:53"

experimental:
  plugins:
    crowdsec-bouncer-traefik-plugin:
      moduleName: "github.com/maxlerebourg/crowdsec-bouncer-traefik-plugin"
      version: "v1.4.1"
