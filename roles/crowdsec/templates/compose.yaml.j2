
services:
  crowdsec:
    image: {{ docker_images.crowdsec }}
    hostname: {{ ansible_hostname }}
    container_name: crowdsec
    restart: always
    ports:
      - "127.0.0.1:8080:8080"
      - 4242:4242/udp
    networks:
      {{ docker_proxy_security_network }}:
        ipv4_address: "172.19.0.3"
        ipv6_address: "fd3c:3065:19::3"
    env_file:
      - "{{ crowdsec_base_folder }}/crowdsec.env"
    labels:
      - traefik.docker.network={{ docker_proxy_security_network }}
    volumes:
      - "{{ crowdsec_base_folder }}/data/db:/var/lib/crowdsec/data/"
      - "{{ crowdsec_base_folder }}/data/config:/etc/crowdsec/"
      - "{{ traefik_base_folder }}/data/logs:/logs/traefik:ro"
      - "/var/log/journal:/run/log/journal:ro"
      - "/var/run/docker.sock:/var/run/docker.sock:ro"
    healthcheck:
      test: ["CMD-SHELL", "wget --spider --quiet --tries=1 --timeout=5 http://127.0.0.1:8080/health > /dev/null 2>&1 || exit 1"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 30s
volumes:
  logs:
    external: true
networks:
  {{ docker_proxy_security_network }}:
    external: true
